<div class="row">
   <div class="col-md-12 mb-2">
<h2 class="az-dashboard-title">SSH Keys         &nbsp;&nbsp;<a href="/sshkey/create"><i class="fa fa-plus" style="color:#67707c;font-size:1.2rem"></i></a>
</h2>

  </div>


  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
            <div style="max-width:350px;padding-bottom:10px;vertical-align:top;">
                <form action="/servers?page={{page}}" method="GET">
                    <div class="input-group">
                      <input
                        name="search"
                        type="search"
                        value="{{search}}"
                        class="form-control"
                        placeholder="Type your keywords here"
                      />
                      <div class="input-group-append">
                        <button type="submit" class="btn btn-lg btn-default">
                          <i class="fa fa-search"></i>
                        </button>
                      </div>
                    </div>
                  </form>  
 
            </div>

            <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>SSH Key name</th>
                <th>Date Added</th>
                <th>Edit</th>
              </tr>
              </thead>
              <tbody>
            {% for key in keys %}
              <tr>
              <td>{{key.Name}}</td>
              <td>{{key.CreatedAt}}</td>
              <td><a href="/sshkey/edit/{{key.ID}}"><i class="far fa-edit"></i></a></td>
              </tr>

            {% endfor %}
            </tbody>
          </table>

      </div>

      <div class="card-footer">
        <ul class="pagination pagination-sm m-0 float-right">
          {% if prevPage > 0 %}
          <li class="page-item">
            <a
              class="page-link"
              href="/servers?page={{prevPage}}{{searchQuery}}"
              ><< Prev</a
            >
          </li>
          {% endif %}

          <li class="page-item">
            <a
              class="page-link"
              href="/servers?page={{nextPage}}{{searchQuery}}"
              >Next >></a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
