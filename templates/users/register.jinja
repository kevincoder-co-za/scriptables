<div class="row">
    <div class="col-md-12 mb-2">
        Welcome to Scriptables, to get started - please setup your admin user account below.
  
    </div>
</div>

<form action="/users/register/complete" method="post">
    <div class="input-group mb-3">
        <input type="text" required class="form-control" value="{{name}}" name="name" placeholder="Your Name*">

    </div>

    <div class="input-group mb-3">
        <input type="email" required class="form-control" value="{{email}}" name="email" placeholder="Your Email*">

    </div>

   <div class="input-group mb-3">
        <input type="text" required class="form-control" value="{{team}}" name="team" placeholder="Your Team Name*">

    </div>

    <div class="input-group mb-3">
        <input type="password" class="form-control" required name="password" placeholder="Password*">
 
    </div>
    <div class="input-group mb-3">
        <input type="password" required class="form-control" name="password_confirm" placeholder="Confirm password*">
 
    </div>
    <div class="row">
        <div class="col-12">

            <button type="submit" class="btn btn-primary btn-block">Create Account</button>

            <br />
        </div>

</form>
