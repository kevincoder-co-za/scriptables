<div class="row">
   <div class="col-md-12 mb-2">
<h2 class="az-dashboard-title">Add new user</h2>
  </div>

  <div class="col-md-12">
    <div class="card card-info">

      <form class="form-horizontal" method="post" action="/user/actions">
                <input type="hidden" name="action" value="newuser" />
                 <input type="hidden" name="user_id" value="0" />


        <div class="card-body">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label"
              >Full name*</label
            >
            <div class="col-sm-10">
                <input class="form-control" required name="name" placeholder="Name" />
            </div>
          </div>



          <div class="form-group row">
            <label class="col-sm-2 col-form-label"
              >Email Address*</label
            >
            <div class="col-sm-10">
                <input class="form-control" name="email"  type="email" placeholder="Email Address" required />
            </div>
          </div>


        </div>

                    <input type="hidden" name="_csrf_token" value="{{_csrf_token}}" />

        <div class="card-footer">
          <button type="submit" class="btn btn-primary">INVITE USER</button>



        </div>
      </form>
    </div>
  </div>
</div>
